<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Add Lego Set</title>
</head>

<body tabindex="-1">

  


  <!-- Navbar -->
  <%- include('partials/navbar', { page: '/about' }) %>


  <!-- Hero Section -->
  <div class="container mx-auto p-6">
    <div class="hero bg-base-200 rounded-lg p-6 shadow-md">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold text-primary">Add a New Lego Set</h1>
          <p class="py-6 text-gray-600">Fill out the form below to add a new Lego set to the collection.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Section -->
  <div class="container mx-auto p-6">
    <form action="/lego/addSet" method="POST" class="bg-white p-6 rounded-lg shadow-md">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Set Number -->
        <div class="mb-6">
          <label for="set_num" class="block text-gray-700 font-medium">Set Number</label>
          <input type="text" id="set_num" name="set_num" required
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-300"
            placeholder="e.g., 1234">
        </div>

        <!-- Name -->
        <div class="mb-6">
          <label for="name" class="block text-gray-700 font-medium">Name</label>
          <input type="text" id="name" name="name" required
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-300"
            placeholder="e.g., Master Mechanic">
        </div>

        <!-- Year -->
        <div class="mb-6">
          <label for="year" class="block text-gray-700 font-medium">Year</label>
          <input type="number" id="year" name="year" required min="1950" max="2024"
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-300"
            placeholder="e.g., 2022">
        </div>

        <!-- Number of Parts -->
        <div class="mb-6">
          <label for="num_parts" class="block text-gray-700 font-medium">Number of Parts</label>
          <input type="number" id="num_parts" name="num_parts" required min="1"
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-300"
            placeholder="e.g., 1500">
        </div>

        <!-- Image URL -->
        <div class="mb-6">
          <label for="img_url" class="block text-gray-700 font-medium">Image URL</label>
          <input type="url" id="img_url" name="img_url" required
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-300"
            placeholder="e.g., https://example.com/image.jpg">
        </div>

        <!-- Theme -->
        <div class="mb-6">
          <label for="theme_id" class="block text-gray-700 font-medium">Theme</label>
          <select id="theme_id" name="theme_id" required
            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-300">
            <% themes.forEach(theme => { %>
            <option value="<%= theme.id %>"><%= theme.name %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <button type="submit" class="btn btn-primary w-full">Add Lego Set</button>
      </div>
    </form>
  </div>

</body>

</html>